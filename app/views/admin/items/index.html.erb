<!DOCTYPE html>
<html lang="ja">
<html class="fontawesome-i2svg-active fontawesome-i2svg-complete">
    <main>
        <header>
            <div class="row">
              <%= render "layouts/header" %>
            </div>
            <div class="pull-right" style="margin-bottome: 10px;">
              <%= search_field(@search, url:public_items_path) do |f| %>
                <%= f.label :name, "キーワード" %>
                <%= f.search_field :name_cont %>
                <%= f.submit %>
              <% end %>
            </div>
        </header>
        <body>
            <div class="row">
                <div class="col-xs-10 col-xs-10 col-xs-offset-1">
                    <h2>商品一覧</h2>
                    <div class="text_right">
                        <%= link_to "新規登録", new_admin_item_path, class:"btn btn_-lg btn-primary" %>
                    </div>
                    <table class="table table-hover table-inverse">
                        <thead>
                            <tr>
                               <th>商品ID</th>
                               <th>商品名</th>
                               <th>税込価格</th>
                               <th>ジャンル</th>
                               <th>ステータス</th>
                            </tr>
                        </thead>
                           
                        <tbody>
                            <% @items.each do |item| %>
                                <tr>
                                    <td><%= item.id %></td>
                                    <td><%= link_to item.name, admin_item_path(item) %></td>
                                    <td><%= item.price.to_s(:delimited, delimiter: ',') %></td>
                                    <td><%= item.genre.name %></td>
                                    <td>
                                        <% if item.is_active == false %>
                                            販売中
                                        <%else%>
                                            販売停止中
                                        <%end%>
                                    </td>
                                </tr>
                            <%end%>
                            <%= paginate @items %>
                        </tbody>
                    </table>
                </div>
            </div>
        </body>
    </main>
</html>