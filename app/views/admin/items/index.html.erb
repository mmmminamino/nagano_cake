<!DOCTYPE html>
<html lang="ja">
<html class="fontawesome-i2svg-active fontawesome-i2svg-complete">
    
    <body>
        <main>
            <div class="pull-right">
                <%= search_form_with model: @search, url: admins_items_path do |f|%>
                    <%= f.label :name, "キーワード"　%>
                    <%= f.search_field :name_cont %>
                    <%= f.submit %>
                <%end%>
            </div>
            
            <div class="row">
                <div class="col-xs-10 col-xs-10 col-xs-offset-1">
                    <h2>商品一覧</h2>
                <div class="text_right">
                    <%= link_to "新規登録", new_admins_item_path, class:"btn btn_-lg btn-primary" %>
                </div>
                         <table class="table table-hover table-inverse">
                           <thead>
                             <tr>
                               <th>商品ID</th>
                               <th>商品名</th>
                               <th>税抜価格</th>
                               <th>ジャンル</th>
                               <th>ステータス</th>
                               <th colspan="3"></th>
                             </tr>
                           </thead>
                               <tbody>
                                   <% @items.each do |item| %>
                                     <tr>
                                       <td><%= item.id do %></td>
                                       <td><%= link_to item.name, admins_item_path(item) %></td>
                                       <td><%= item.price %></td>
                                       <td><%= item.genre.name %></td>
                                       <td><% if item.is_active == false %>
                                        販売中
                                        <%else%>
                                        販売停止中
                                        <%end%>
                                       </td>
                                       <td colspan="3"></td>
                                     </tr>
                                    <%end%>
                                    <%= pagenate @items %>
                               </tbody>
                         </table>
                    </div>
                </div>
            </div>
        </main>
    </body>