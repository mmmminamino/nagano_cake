                    <a class="navbar-brand p-3" href="/" ><%= image_tag('img_logo.png', size: '140x29') %></a>
                </div>
            </nav>
            <nav>
                <ul class="nav navbar-nav navbar-right" style="margin-top: 30px;">
                    <% if customer_signed_in? %>
                     <li style="font-family: HiraMinPro-W6; margin-top: 15px;">
                         ようこそ、<%= current_customer.last_name + current_customer.first_name %>さん
                     </li>
                     <li><%= link_to "マイページ", public_show_path(current_customer), class: 'btn btn-default' %></li>
                     <li><%= link_to "商品一覧", public_items_path, class: 'btn btn-default' %></li>
