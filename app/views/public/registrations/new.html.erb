<body>
  <main>
    <h2>新規会員登録</h2>
    
    <%= render "public/shared/error_messages", resource: resource %>
    <%= form_with model: @customer,url: new_customer_registration_path do |f| %>
      <div class="field">
        <%= f.label :名前 %>
          <p>(姓)</p><%= f.text_field :last_name, autofocus: true, placeholder:"令和" %><p>(名)</p><%= f.text_field :first_name, autofocus: true, placeholder:"道子" %>
      </div>
      <div class="field">
        <%= f.label :フリガナ %>
          <p>(姓)</p><%= f.text_field :last_name_kana, autofocus: true, placeholder:"レイワ" %><p>(名)</p><%= f.text_field :first_name_kana, autofocus: true, placeholder:"ミチコ" %>
      </div>
      <div class="field">
        <%= f.label :メールアドレス, autofocus: true, placeholder:"sample@example.com" %>
          <%= f.email_field :email %>
      </div>
      <div class="field">
        <%= f.label :"郵便番号(ハイフンなし)" %>
          <%= f.text_field :postal_code, autofocus: true, placeholder:"0000000" %>
      </div>
      <div class="field">
        <%= f.label :住所 %>
          <%= f.text_field :address, autofocus: true, placeholder:"東京都渋谷区代々木神園町0-0" %>
      </div>
      <div class="field">
        <%= f.label :"電話番号(ハイフンなし)" %>
          <%= f.text_field :telephone_number, autofocus: true, placeholder:"00000000000" %>
      </div>
      <div class="field">
        <%= f.label :"パスワード(6文字以上)" %>
          <%= f.text_field :password %>
      </div>
      <div class="field">
        <%= f.label :"パスワード(確認用)" %>
          <%= f.text_field :password %>
      </div>
        <%= f.submit '新規登録' %>
    <% end %>
    <h2>既に登録済みの方</h2>
    　<%= link_to 'こちら', new_customer_session_path %>からログインしてください。
  </main>
</body>